        <!-- phone number icon -->

        <a href="tel: +1-952-555-5555" aria-hidden="true"><span class="visually-hidden"></span><i class="social-icon fas fa-phone"></i></a>
      </div>
      <p class="footer-p mx-auto">¬© Copyright 2021 HatTricks LLC</p>
    </footer>
